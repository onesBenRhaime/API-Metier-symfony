{# templates/badge/_form.html.twig #}
{{ form_start(form) }}
<div class="fils" style="padding-left: 300px;">
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.commantaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.commantaire, {'attr': {'class': 'form-control', 'placeholder': 'Commentaire'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.datebadge, 'Date Badge', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.datebadge, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.typebadge, 'Type Badge', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.typebadge, {'attr': {'class': 'form-select'}}) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.restaurant, 'Restaurant', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.restaurant, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>
{{ form_end(form) }}
