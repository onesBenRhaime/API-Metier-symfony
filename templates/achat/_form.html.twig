{# templates/achat/_form.html.twig #}
{{ form_start(form) }}
<div class="fils" style="padding-left: 300px;">
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.montanttotal, 'Montant Total', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.montanttotal, {'attr': {'class': 'form-control', 'placeholder': 'Montant Total'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder': 'Quantité'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.plat, 'Plat', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.plat, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>
{{ form_end(form) }}
