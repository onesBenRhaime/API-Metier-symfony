{# templates/user/_form.html.twig #}
{{ form_start(form) }}
<div class="fils" style="padding-left: 300px;">
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'First Name'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Last Name'}}) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.tel, {'attr': {'class': 'form-control', 'placeholder': 'Telephone'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Address'}}) }}
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.role, {'attr': {'class': 'form-select'}}) }}
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>
{{ form_end(form) }}
