{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}




{% block body %}
<div class="fils" style="padding-left: 300px;">
    <!-- Contenu de votre élément -->


    <h1>User index</h1>

    <table class="table"  >
        <thead>
            <tr>
                <th>Iduser</th>
                <th>Username</th>
                <th>Email</th>
                <th>Password</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Tel</th>
                <th>Address</th>
                <th>Role</th>

            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.iduser }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.role }}</td>
                <td>
<button class="btn btn-secondary" onclick="window.location.href='{{ path('app_user_show', {'iduser': user.iduser}) }}'">
    Show
</button>
</td>
<td>
                  <button class="btn btn-warning" onclick="window.location.href='{{ path('app_user_edit', {'iduser': user.iduser}) }}'">
    Edit
</button>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<form method="get" action="{{ path('app_user_new') }}">
    <button type="submit" class="btn btn-primary">Create new</button>
</form>

</div>{% endblock %}



