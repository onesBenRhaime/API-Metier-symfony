{# templates/evennement/_form.html.twig #}
{{ form_start(form) }}
<div class="fils" style="padding-left: 300px;">
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.img, 'Image', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.img, {'attr': {'class': 'form-control', 'placeholder': 'Image'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.lieu, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lieu, {'attr': {'class': 'form-control', 'placeholder': 'Lieu'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
        </div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>
{{ form_end(form) }}
