{# templates/reponse/_form.html.twig #}
{{ form_start(form) }}
<div class="fils" style="padding-left: 300px;">
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.contenue, 'Contenue', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.contenue, {'attr': {'class': 'form-control', 'placeholder': 'Contenue'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.daterep, 'Date de Réponse', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.daterep, {'attr': {'class': 'form-control', 'placeholder': 'Date de Réponse'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.reclamation, 'Réclamation', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.reclamation, {'attr': {'class': 'form-select'}}) }}
        </div>
    </div>

    <div class="col-md-6">
        {# Add additional styling or form elements here if needed #}
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>

{{ form_end(form) }}
