{% block title %}Reponse index{% endblock %}

{% block body %}
<div class="fils" style="padding-left: 300px;">

    <h1>Reponse index</h1>

    <table border="1" class="table">
        <thead>
            <tr>
                <th>Idrep</th>
                <th>Contenue</th>
                <th>Daterep</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.idrep }}</td>
