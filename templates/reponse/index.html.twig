            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<form method="get" action="{{ path('app_reponse_new') }}">
    <button type="submit" class="btn btn-primary">Create new</button>
</form>

      </div>
{% endblock %}
 