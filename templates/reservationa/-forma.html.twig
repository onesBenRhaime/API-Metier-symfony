{# templates/reservation/_form.html.twig #}
{{ form_start(form) }}
<div class="fils" style="padding-left: 300px;">
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.datereser, 'Date Reservation', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.datereser, {'attr': {'class': 'form-control', 'placeholder': 'Date Reservation'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.timereser, 'Time Reservation', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.timereser, {'attr': {'class': 'form-control', 'placeholder': 'Time Reservation'}}) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control', 'placeholder': 'User'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.restaurant, 'Restaurant', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.restaurant, {'attr': {'class': 'form-control', 'placeholder': 'Restaurant'}}) }}
        </div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>
{{ form_end(form) }}
