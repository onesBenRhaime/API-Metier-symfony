{# templates/reclamation/_form.html.twig #}
{{ form_start(form) }}
<div class="fils" style="padding-left: 300px;">
<div class="row">
    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Date'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.typerec, 'Type', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.typerec, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.etatrec, 'Etat', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.etatrec, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.user, 'User', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</div>
{{ form_end(form) }}
